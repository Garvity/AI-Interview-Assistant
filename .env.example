###############################################
# Frontend-only Hugging Face Router .env.example
# Copy this file to `.env` and fill in your values.
# IMPORTANT: Exposing API keys in a frontend app is insecure for production.
# Prefer a backend proxy to protect secrets in real deployments.
###############################################

# Required: Your Hugging Face API token (starts with hf_)
VITE_HF_API_KEY=hf_XXXXXXXXXXXXXXXXXXXXXXXXXXXX

# Optional: Model ID to use (instruction/chat tuned recommended)
# e.g. mistralai/Mistral-7B-Instruct-v0.2, HuggingFaceH4/zephyr-7b-beta
VITE_HF_MODEL=mistralai/Mistral-7B-Instruct-v0.2

# Optional: Timeout and retry behavior
# Request timeout in milliseconds
VITE_HF_TIMEOUT_MS=30000
# Max automatic retries for transient errors (timeouts/503/loading)
VITE_HF_MAX_RETRIES=2

# Optional: Dev debug logs for AI calls (true/false)
VITE_DEBUG_AI=true
